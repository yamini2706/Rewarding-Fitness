<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.rewardingfitness.Workouts">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D8BFD8"
        android:textAlignment="textEnd"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Workouts"
        app:titleTextColor="@color/black"
        android:gravity="end" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"


        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginTop="20.0dp"
                android:background="@drawable/background"
                android:onClick="Cardio"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="5.0dp"
                            android:text="Cardio"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30.0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="30:00 MIN"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="300 CAL"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cardio" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginTop="400.0dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="Yoga"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="5.0dp"
                            android:text="Yoga"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30.0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="30:00 MIN"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="450 CAL"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />



                    </LinearLayout>
                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="61dp"
                        android:layout_gravity="center"
                        android:src="@drawable/yoga" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginTop="400.0dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="Crunches"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="5.0dp"
                            android:text="Crunches"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30.0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="30:00 MIN"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="200 CAL"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />



                    </LinearLayout>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:src="@drawable/crunches" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginTop="400.0dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="Treadmill"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="5.0dp"
                            android:text="Treadmill"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30.0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="15:00 MIN"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:padding="7.0dp"
                            android:text="350 CAL"
                            android:textAlignment="center"
                            android:textColor="#DC143C"
                            android:textSize="15.0dp"
                            />



                    </LinearLayout>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:src="@drawable/treadmill" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>